                            <i class="facebook icon"></i>
                            <span>Continue with Facebook</span>
                          </button>
                       </form>
                      </div>
                    </div>
                  </div>
                </section> -->
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <% include ../../partials/footer %>
    <script src="/static/scripts/loginValidation.js"></script>
    <script src="/static/scripts/login.js"></script>
  </body>
</html>
