{
  "loggers": {
    "handlers": [
      {
        "name": "root",
        "level": "info",
        "stream": "cloudwatch"
      },
      {
        "name": "auth",
        "level": "info",
        "stream": "cloudwatch"
      },
      {
        "name": "db",
        "level": "info",
        "stream": "cloudwatch"
      },
      {
        "name": "sendgrid",
        "level": "info",
        "stream": "cloudwatch"
      }
    ],
    "streams": {
      "cloudwatch": {
        "logGroupName": "arbiter-qa",
        "logStreamName": "arbiter",
        "cloudWatchLogsOptions": {
          "sslEnabled": true,
          "region": "us-east-1"
        }
      }
    }
  },
  "server": {
    "hostname": "0.0.0.0",
    "session": {
      "cookie": {
        "domain": ".thrivehive.com"
      },
      "name": "thrivehive_qa_session"
    }
  }
}
