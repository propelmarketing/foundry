{
  "extends": [
    "airbnb",
    "plugin:flowtype/recommended"
  ],
  "globals": {
    "define": true,
    "document": true,
    "require": true,
    "window": true,
    "requirejs": true,
    "it": true,
    "before": true,
    "after": true,
    "beforeEach": true,
    "afterEach": true,
    "describe": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 7
  },
  "plugins": [
    "flowtype"
  ],
  "rules": {
    "arrow-body-style": [
      "error",
      "always"
    ],
    "class-methods-use-this": 0,
    "comma-dangle": 0,
    "func-names": 0,
    "global-require": 0,
    "import/extensions": 0,
    "import/no-dynamic-require": 0,
    "import/no-extraneous-dependencies": 0,
    "import/prefer-default-export": 0,
    "linebreak-style": 0,
    "max-len": [
      "error",
      120,
      2
    ],
    "no-multi-str": 0,
    "no-param-reassign": [2, { "props": true, "ignorePropertyModificationsFor": ["request", "response"] }],
    "no-plusplus": 0,
    "no-restricted-syntax": 0,
    "no-underscore-dangle": [2, { "allow": ["__DEV__"] }],
    "prefer-arrow-callback": 0,
    "strict": 0
  },
  "settings": {
    "import/resolver": {
      "babel-module": {}
    }
  }
}
